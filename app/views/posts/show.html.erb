<p id="notice"><%= notice %></p>

<div class="text-right">
  <p>
    <strong>Author:</strong>
    <%= @post.name %>
  </p>
</div>

<div class="text-center mb-5">
  <h2>
    <%= @post.title %>
  </h2>
</div>

<%= image_tag(@post.image, width: "600", alt: "Post image", class: "img-fluid py-5") if @post.image.present? %>

<p>
  <%= @post.content %>
</p>

<div class="comments my-5">
  <h5 class="mb-3">Comments</h5>
  <%= render @comments%>
</div>

<div class="text-right">
  <%= form_with model: @post, method: :get do %>
    <p>Show comments:</p>
    <%= radio_button_tag :comment_status, "published" , true %>
    <%= label_tag :published, "Published" %>
    <%= radio_button_tag :comment_status, "unpublished" %>
    <%= label_tag :unpublished, "Unpublished" %>
    <%= submit_tag 'Show', class: 'btn btn-primary' %>
  <% end %>
</div>

<h5> Add a comment:</h5>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-secondary" %>
<%= link_to 'Back', posts_path, class: "btn btn-secondary" %>
