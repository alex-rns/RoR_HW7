<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h5>
      <ul class="list-unstyled">
        <% post.errors.each do |error| %>
          <li class="alert alert-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field py-2">
    <%= form.label :name, class: "pb-2" %>
    <%= form.collection_select :name, Author.order(:last_name), :name_with_initial, :name_with_initial, { prompt: "Select author" }, { class: "form-control" } %>
  </div>

  <div class="field py-2">
    <%= form.label :title, class: "pb-2" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field py-2">
    <%= form.label :content, class: "pb-2" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="field py-2">
    <%= form.label :image, class: "pb-2" %>
    <%= form.text_field :image, class: "form-control" %>
  </div>

  <div class="actions py-2">
    <%= form.submit(class: "btn btn-success") %>
  </div>
<% end %>
